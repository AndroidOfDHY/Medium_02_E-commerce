<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="#F2FAB4">
	<LinearLayout android:orientation="horizontal" android:padding="10dip"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="@drawable/topbar" android:gravity="center_vertical|center_horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:textSize="20dip" android:text="@string/mycollect"
			android:textColor="@color/white" />
	</LinearLayout>

	<ListView android:id="@+id/listview" android:layout_width="match_parent"
		android:layout_height="380dip" android:cacheColorHint="#F2FAB4"
		android:layout_weight="1"></ListView>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="@drawable/topbar">

		<Button android:layout_width="100dip" android:layout_height="wrap_content"
			android:id="@+id/back" android:background="@drawable/menu_button_bt"
			android:text="@string/back" android:textColor="@color/white"
			android:layout_weight="1" android:paddingBottom="5dip"
			android:paddingTop="10dip" android:textSize="15dip" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:src="@drawable/detail_divide_line" />
		<Button android:layout_width="100dip" android:layout_height="wrap_content"
			android:id="@+id/back_main" android:background="@drawable/menu_button_bt"
			android:text="@string/back_main" android:textColor="@color/white"
			android:layout_weight="1" android:paddingBottom="5dip"
			android:paddingTop="10dip" android:textSize="15dip" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:src="@drawable/detail_divide_line" />
		<Button android:layout_width="100dip" android:layout_height="wrap_content"
			android:id="@+id/delete" android:background="@drawable/menu_button_bt"
			android:text="@string/delete" android:textColor="@color/white"
			android:layout_weight="1" android:paddingBottom="5dip"
			android:paddingTop="10dip" android:textSize="15dip" />
	</LinearLayout>
</LinearLayout>