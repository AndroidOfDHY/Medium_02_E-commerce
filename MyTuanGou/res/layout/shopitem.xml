<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/shop_name" android:textColor="@color/black"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="10px" android:textSize="15dip" />
	<TextView android:id="@+id/shop_addr" android:textColor="@color/black"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="10px" android:textSize="12dip" />
	<TextView android:id="@+id/shop_tel" android:textColor="@color/black"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="10px" android:textSize="12dip" />
</LinearLayout>
