<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#eff3ef">
    <LinearLayout android:layout_width="match_parent"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:background="@drawable/topbar">

		<Button android:id="@+id/map_back" android:background="@drawable/toolbar_back_bt"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<TextView android:id="@+id/shop_name" android:layout_height="match_parent" android:textSize="16dip"
			android:gravity="center" android:textColor="@color/white"
			android:ellipsize="marquee" android:singleLine="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:focusableInTouchMode="true" android:focusable="true"
			android:layout_marginRight="10px" android:layout_width="match_parent"/>
	</LinearLayout>

	<com.google.android.maps.MapView
		android:clickable="true" android:id="@+id/mapview"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:apiKey="04NrrfLiKNvNRyj1G2-ikytgy9q38hb_PXvka2g" />
</LinearLayout>
